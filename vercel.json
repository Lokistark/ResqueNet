{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/((?!api|socket.io).*\\.[a-z0-9]+)$",
            "destination": "/client/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}