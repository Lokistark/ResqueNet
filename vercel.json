{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/sw.js",
            "destination": "/client/dist/sw.js"
        },
        {
            "source": "/manifest.json",
            "destination": "/client/dist/manifest.json"
        },
        {
            "source": "/vite.svg",
            "destination": "/client/dist/vite.svg"
        },
        {
            "source": "/((?!api|socket\\.io).*)",
            "destination": "/client/dist/index.html"
        }
    ]
}